def sad():
    print("Cole is sad.")


def is_happy():
    heather_distance = input("Is she far away? (yes/no): ").strip().lower()
    if heather_distance == "yes":
        sad()
    elif heather_distance == "no":
        heather_nearby = input(
            "Are you with her right now? (yes/no): ").strip().lower()
        if heather_nearby == "yes":
            print("Cole is happy!")
        elif heather_nearby == "no":
            sad()
        else:
            print("Invalid input.")


is_happy()
